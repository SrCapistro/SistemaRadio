            <Label fx:id="labelTituloPatron" layoutX="202.0" layoutY="22.0" text="CREAR PATRÓN" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Pane layoutY="523.0" prefHeight="81.0" prefWidth="840.0" style="-fx-background-color: #14213d;">
         <children>
            <Button fx:id="btnCancelar" layoutX="364.0" layoutY="24.0" mnemonicParsing="false" onAction="#botonCancelarClick" style="-fx-background-color: #ba181b;" text="Cancelar" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <TableView fx:id="tablaLineasPatron" layoutX="35.0" layoutY="205.0" prefHeight="249.0" prefWidth="770.0">
