<AnchorPane prefHeight="604.0" prefWidth="840.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uv.myradiocontroller.FXMLCrearPatron">
   <children>
